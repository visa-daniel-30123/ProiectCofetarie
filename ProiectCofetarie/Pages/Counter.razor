    .grid-item {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .grid-item img {
            width: 70%;
            height: 70%;
            object-fit: cover;
        }

    .add {
        width: 100%;
        font-size: 30px;
        background-color: rgba(0,0,0,0);
        color: white;
        position: absolute;
        left: 0px;
        bottom: 0px;
        opacity: 0;
    }

    img {
